{
  "database": {
    "rules": "packages/database/database.rules.json"
  },
  "firestore": {
    "rules": "packages/firestore/firestore.rules",
    "indexes": "packages/firestore/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "node pre-deploy.js",
      "npm --prefix packages/functions run lint",
      "npm --prefix packages/functions run build"
    ],
    "postdeploy": [
      "node post-deploy.js"
    ],
    "source": "packages/functions"
  },
  "hosting": {
    "public": "packages/game-app/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 5555
    }
  }
}
